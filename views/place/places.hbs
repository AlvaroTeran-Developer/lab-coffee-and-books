<a href="/" class="btn-menu"> >Back to menu</a>
<div class="container text-center">
  <h1 class="my-5">All Places</h1>
  <div id="map"></div>
  <div class="column">
    <div class="row">
      {{#each allPlaces}}
        <div class="card col-lg-3 my-4 border-0">
          <div class="card-body">
            <a href="/places/{{id}}">
              <h5 class="card-title">{{name}}</h5>
            </a>
            <p class="card-text">{{type}}</p>
            <p class="card-text">{{description}}</p>
          </div>
        </div>
        <div class="col-lg-1"></div>
      {{/each}}
    </div>
  </div>
